<p id="notice"><%= notice %></p>

<h1>List of Galleries</h1>

<table>
  <td class="like_h2">Name</td>
  <td class="like_h3">updated at</td>


<% @galleries.each do |gallery| %>
  <tr>
    <td class="padding_right_40px"><%= gallery.name %></td>
    <td class="padding_right_40px"><%= gallery.updated_at.strftime("%d.%m. %Rh") %></td>
    <td><%= link_to 'Show', gallery %></td>
    <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
    <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


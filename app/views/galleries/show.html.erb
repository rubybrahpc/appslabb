<p id="notice"><%= notice %></p>

<div id="paintings">
  <% for painting in @gallery.paintings %>
    <div class="painting">
      <%= image_tag painting.image if painting.image? %></div>
      <div class="name"><%= painting.name %></div>
      <div class="actions">
        <%= link_to "edit", edit_painting_path(painting) %> |
        <%= link_to "remove", painting, confirm: 'Are you sure?', method: :delete %>
      </div>
    
  <% end %>
  <div class="clear"></div>
</div>

<div id="videos">
  <% for video in @gallery.videos %>
    <div class="video">
      <%= video_tag video.video, size: "640x436", controls: true %></div>
      <div class="name"><%= video.name %></div>
      <div class="actions">
        <%= link_to "edit", edit_video_path(video) %> |
        <%= link_to "remove", video, confirm: 'Are you sure?', method: :delete %>
      </div>
    
  <% end %>
  <div class="clear"></div>
</div>

<p>
  <%= link_to "Add a Painting", new_painting_path(gallery_id: @gallery) %> |
  <%= link_to "Add a Video", new_video_path(gallery_id: @gallery) %> |
  <%= link_to "Remove Gallery", @gallery, confirm: 'Are you sure?', method: :delete %> |
  <%= link_to "View Galleries", galleries_path %>
</p>


<%= link_to 'Edit', edit_gallery_path(@gallery) %> |
<%= link_to 'Back to Galleries', galleries_path %>
